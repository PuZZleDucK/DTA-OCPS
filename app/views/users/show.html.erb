<h1><%= @user.name %></h1>

<%= link_to "new order", new_order_url %>


<p>Orders</p>

<% @user.orders.each do |order| %>
  <p><%= link_to order.id, order %></p>
<% end %>

<p>Order Lines</p>

<% @user.order_lines.each do |line| %>
  <p>line <%= link_to line.id, line %> - q <%= line.quantity %> - i <%= link_to line.item.id, line.item %> - $ <%= line.item.unit_price %></p>
<% end %>
